.container {
    width: 100%;
    height: 100%;
    text-align: center;
}

.draw-cell {
    width: 80%;
    height: 800rpx;
    background: white;
    margin-left: auto;
    margin-right: auto;
    margin-top: 50rpx;
    margin-bottom: 50rpx;
    border-radius: 30rpx;
    text-align: center;
}

.draw-logo-image {
    width: 150rpx;
    height: 150rpx;
    margin-top: 30rpx;
}

.draw-title {
    margin-top: 30rpx;
    margin-left: auto;
    margin-right: auto;
    padding-top: 50rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
    padding-bottom: 50rpx;
    font-size: 40rpx;
    max-width: 80%;
    min-width: 80%;
    text-align: center;
    border-radius: 20rpx;
    border: 3rpx dotted red;
}

.draw-image {
    width: 150rpx;
    height: 150rpx;
    margin-top: 30rpx;
    margin-left: auto;
    margin-right: auto;
}

.draw-notice {
    font-size: 25rpx;
    color: #333333;
    margin-top: -40rpx;
}

.comfirm-background {
    opacity: 0.6;
    z-index: 100;
    position: fixed;
    width: 100%;
    height: 100%;
    background-color: #000000;
}

.comfirm-cell {
    opacity: 1;
    z-index: 101;
    position: fixed;
    width: 100%;
    height: 100%;
    text-align: center;
}

.comfirm-content {
    width: 80%;
    margin-left: auto;
    margin-right: auto;
    margin-top: 350rpx;
    background-color: white;
}

.comfirm-text {
    padding-top: 80rpx;
    padding-bottom: 80rpx;
    text-align: center;
    font-size: 35rpx;
}

.comfirm-btn-cell {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    background-color: white;
}

.comfirm-btn-ok {
    width: 50%;
    background-color: white;
    margin-top: 0rpx;
    margin-bottom: 0rpx;
    border-radius: 0rpx;
    color: #ff9d01;
}

.comfirm-btn-cancel {
    width: 50%;
    background-color: white;
    margin-top: 0rpx;
    margin-bottom: 0rpx;
    border-radius: 0rpx;
    color: red;
}

.to-home {
    font-size: 25rpx;
    color: #333333;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}
